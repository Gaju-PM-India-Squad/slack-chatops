{
    "compilerOptions": {
      "module": "commonjs",
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
      "moduleResolution": "node",
      "noImplicitAny": true,
      "strict": true,
      "target": "es6",
      "experimentalDecorators": true,
      "sourceMap": true,
      "outDir": "dist",
      "baseUrl": "./",
      "paths": {
        "*": ["types/*"]
      }
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "dist"]
  }